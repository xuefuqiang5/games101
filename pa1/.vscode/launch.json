{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Rasterizer",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/Rasterizer",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "lldb",  // Mac 使用 lldb；Linux 使用 gdb
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build"
      }
    ]
  }